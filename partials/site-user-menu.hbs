<div class="user-menu js-user-menu">
  {{!-- Member Links --}}
  {{#if @member}}
    <div class="member-user">
      <div class="member-info flex flex-col">
        <div class="member-name">{{@member.name}}</div>
        <span class="member-email">{{@member.email}}</span>
      </div>
    </div>

    {{#unless @member.paid}}
      <a class="upgrade-link" href="javascript:void(0)" data-members-plan="Monthly" tabindex="0"
        title="{{t "Upgrade"}}" aria-label="{{t "Upgrade"}}">
        {{>icon name="trending-up" size="xs"}}{{t "VIP"}}
      </a>
    {{/unless}}

    <a class="account-link" href="#/portal/account/" tabindex="0"
      title="{{t "Account"}}" aria-label="{{t "Account"}}">
      {{>icon name="user" size="xs"}}{{t "Your subscription"}}
    </a>

    <a class="account-link" target="_blank" href="https://en.gravatar.com/"tabindex="0">
      {{>icon name="image" size="xs"}}{{t "Update avatar"}}
</a>
    <a class="signout-link" href="#signout" tabindex="0"
      title="{{t "Sign out"}}" aria-label="{{t "Sign out"}}"
      data-members-signout>
      {{>icon name="log-out" size="xs"}}{{t "Sign out"}}
    </a>
  {{else}}
    <a class="signup-link" href="/signup/" tabindex="0"
      title="{{t "Sign up"}}" aria-label="{{t "Sign up"}}">
      {{>icon name="arrow-up-right" size="xs"}}{{t "Sign up"}}
    </a>
    <a class="signin-link" href="/signin/" tabindex="0"
      title="{{t "Sign in"}}" aria-label="{{t "Sign in"}}">
      {{>icon name="log-in" size="xs"}}{{t "Sign in"}}
    </a>
  {{/if}}
</div>
