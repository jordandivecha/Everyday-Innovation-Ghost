{{!-- Announcement posts --}}
{{#get "posts" filter="tag:hash-announcement" limit="3" as |announce|}}
  {{#if announce}}
    <div class="announcements">
      <button class="announce--toggle flex-cc js-announce-btn" type="button" 
        title="{{t "Announcements"}}" aria-label="{{t "Announcements"}}">
        {{> icon name="bell" size="sm"}}
      </button>

      <div class="announce-feed js-announce-feed">
        {{#foreach announce}}
          {{#link href=(url) class="announce-post"}}
            <span class="announce-post__title">{{title}}</span>
            <div class="announce-post__description text-acc-3">{{excerpt words="12"}}&hellip;</div>
            <span class="announce-post__icon text-acc-3">{{t "Learn more"}} ‚ü∂</span>
          {{/link}}
        {{/foreach}}
      </div>
    </div>
  {{/if}}
{{/get}}