{
  "name": "dashi",
  "description": "Dashi Ghost Theme",
  "demo": "https://dashi.brightthemes.com",
  "version": "2.16.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Bright Themes",
    "email": "hi@brightthemes.com",
    "url": "https://brightthemes.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Magazine",
      "Blog",
      "Dashboard"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brightthemes/dashi-ghost.git"
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "test": "gscan . --verbose",
    "zip": "gscan . --verbose && gulp build && gulp zip",
    "release": "npm version minor --no-git-tag-version && git add . && git commit -m \"v$(node -p 'require(\"./package.json\").version')\" && git push && npm run zip"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@tryghost/content-api": "^1.11.21",
    "beeper": "^2.1.0",
    "browser-sync": "^2.29.3",
    "cssnano": "^5.1.15",
    "cssnano-preset-advanced": "^5.3.10",
    "feather-icons": "^4.29.2",
    "fitvids": "^2.1.1",
    "fslightbox": "^3.4.2",
    "fuse.js": "^6.6.2",
    "gscan": "^4.46.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "lazysizes": "^5.3.2",
    "postcss": "^8.4.49",
    "postcss-color-function": "^4.1.0",
    "postcss-cssential": "^1.1.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-custom-properties": "^12.1.11",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.3",
    "prismjs": "^1.29.0",
    "pump": "^3.0.2",
    "tiny-slider": "^2.9.4",
    "tocbot": "^4.32.2"
  },
  "config": {
    "custom": {
      "secondary_color": {
        "type": "color",
        "default": "#f77a3b"
      },
      "default_color_scheme": {
        "type": "select",
        "options": [
          "System",
          "Light",
          "Dark",
          "Whitesmoke",
          "Midnight"
        ],
        "default": "System"
      },
      "enable_sticky_header": {
        "type": "boolean",
        "default": false
      },
      "use_portal_links": {
        "type": "boolean",
        "default": false
      },
      "post_feed_style": {
        "type": "select",
        "options": [
          "list",
          "grid"
        ],
        "default": "grid",
        "group": "homepage"
      },
      "post_feed_sidebar": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "featured_slider": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "hero_headline": {
        "type": "text",
        "group": "homepage"
      },
      "hero_description": {
        "type": "text",
        "group": "homepage"
      },
      "hero_cta_text": {
        "type": "text",
        "default": "Learn more",
        "group": "homepage"
      },
      "hero_cta_link": {
        "type": "text",
        "default": "/membership/",
        "group": "homepage"
      },
      "hero_stats": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "enable_image_lightbox": {
        "type": "boolean",
        "default": true,
        "group": "post"
      },
      "open_external_links_in_new_tab": {
        "type": "boolean",
        "default": false,
        "group": "post"
      }
    },
    "card_assets": true,
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
